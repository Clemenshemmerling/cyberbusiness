$gris = #383434
$orange = #E44424
$white = #FAF3DD
$celeste = #4A96AD
$verde = #D4F09E
$azul = #68B0AB
$rosado = #FF0080

.header
	background-color $orange
	height 64px
	position fixed
	top 0
	left 0
	width 100%
	z-index 10
	line-height 64px
	border-bottom: 4px solid $rosado

	
	&-mobile
		display flex
		justify-content space-between
		
		h1
			font-weight normal
		
	&-logo
		order 1
		margin-left 1rem
	
	&-btn-nav
		order 2
		border 0
		border-radius 5px
		background-color $orange
		color $white
		padding 0
		margin-right 1rem
		font-size 2rem
	
	&-menu-navbar
		background-color $orange
		
	&-menu-list	
		list-style-type none
		height 0
		overflow hidden
		transition height .3s ease
		
		&--show
			height 430px
			
			
		&-item
			a
				text-decoration none
				color $white
				width 100%
				padding 1.5rem
				display block
				
@media (min-width 768px)
	.header
		display flex
		flex-direction row
		flex-wrap wrap
		justify-content space-between
		height 80px
		transition all .3s ease
		line-height 80px
		
		h1
			font-weight normal
		
		&-logo
			margin-left 2rem
		
		&-btn-nav
			display none
	
		&-menu-list	
			height 80px
					
			&-item
				display inline-block
				
				a
					padding 0 1em
				
				a:hover
					color $gris	
					
				
				
				
					
				